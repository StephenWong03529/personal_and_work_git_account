# ~/.ssh/config

# Configuration for your first account (e.g., personal)
Host myfirstgithub
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519_first_account # Path to your personal SSH private key 
    IdentitiesOnly yes # Important: only use this specified key

# Configuration for your second account (e.g., work)
Host mysecondgithub
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519_second_account # Path to your work SSH private key 
    IdentitiesOnly yes # Important: only use this specified key